<%= form_for(@tweet, url: choose_new_or_edit_or_index) do |f| %>
  <% if @tweet.errors.any? %>
    <div id="error_explanation" align="center">
      <h2><%= @tweet.errors.count %>件のエラーがあります。</h2>

      <ul style="list-style:none">
        <% @tweet.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  

    
    <%= f.text_field :content, class: 'form-control' %>
    <%= f.submit 'ツイート',  class: 'btn btn-primary btn-block' %>

<% end %>

